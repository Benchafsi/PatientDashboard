@page
@model PatientDashboard.Pages.Patients.IndexModel
@{
    ViewData["Title"] = "Patients";
}
@if (Model.Patients.Count == 0)
{
    <div class="alert alert-info mb-0">
        No patients found. If you expected seed data, ensure migrations/seeding run on startup.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th class="text-center">Age</th>
                    <th class="text-center">Room</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Patients)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td class="text-center">@p.Age</td>
                        <td class="text-center">@p.RoomNumber</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-primary" asp-page="./Monitor" asp-route-id="@p.Id">
                                Monitor
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}